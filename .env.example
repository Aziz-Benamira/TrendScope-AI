# API Keys - REPLACE WITH YOUR OWN!
# Get TMDB API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Get Reddit credentials from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=TrendScope-AI/1.0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_TMDB=tmdb_stream
KAFKA_TOPIC_REDDIT=reddit_stream
KAFKA_TOPIC_TREND=trend_stream
KAFKA_TOPIC_PREDICTIONS=predictions_stream

# Cassandra Configuration
CASSANDRA_HOST=cassandra
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=trendscope

# Spark Configuration
SPARK_MASTER_URL=spark://spark-master:7077

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=movie_trend_prediction

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Processing Parameters
TREND_WINDOW_DURATION=5 minutes
TREND_SLIDE_DURATION=1 minute
W1_POPULARITY=0.4
W2_MENTIONS=0.3
W3_SENTIMENT=0.3

# Data Ingestion
TMDB_FETCH_INTERVAL=300
REDDIT_FETCH_INTERVAL=60
